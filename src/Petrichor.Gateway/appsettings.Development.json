{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "petrichor-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://apiservice"
          }
        }
      },
      "petrichor-comments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://commentsservice"
          }
        }
      }
    },
    "Routes": {
      "petrichor-route1": {
        "ClusterId": "petrichor-cluster",
        "Match": {
          "Path": "api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "petrichor-route2": {
        "ClusterId": "petrichor-cluster",
        "Match": {
          "Path": "uploads/{**catch-all}"
        }
      },
      "petrichor-route3": {
        "ClusterId": "petrichor-cluster",
        "Match": {
          "Path": "thumbs/{**catch-all}"
        }
      },
      "petrichor-comments-route1": {
        "ClusterId": "petrichor-comments-cluster",
        "Match": {
          "Path": "api/comments/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "api"
          }
        ]
      }
    }
  }
}
